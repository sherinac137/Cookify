<div class="container-fluid my-5 mt-5">
  <h2 class="mt-4 display-4">Recipes of <%= userName %></h2>
  <p class="lead mt-2 mb-4">Username: <%= userEmail %></p>

  <% if (recipes.length > 0) { %>
  <table class="table table-striped table-bordered text-center mt-3">
    <thead class="table-dark">
      <tr>
        <th scope="col">Recipe Title</th>
        <th scope="col">View Count</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% recipes.forEach(recipe => { %>
      <tr>
        <td><%= recipe.title %></td>
        <td><%= recipe.viewcount %></td>
        <!-- Displaying the view count -->
        <td>
          <a href="/view-recipe/<%= recipe._id %>" class="btn btn-primary"
            >View Recipe</a
          >
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  <% } else { %>
  <p>No recipes found for this user.</p>
  <% } %>
</div>
